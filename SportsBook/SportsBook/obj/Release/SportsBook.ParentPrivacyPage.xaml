<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns     ="http://xamarin.com/schemas/2014/forms"
	xmlns:x    ="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:Local="clr-namespace:SportsBook;assembly:SportsBook"
	x:Class    ="SportsBook.ParentPrivacyPage"
	Title      ="Setting">
	<ContentPage.Content>
		<RelativeLayout
			BackgroundColor="#0C3851">
			<BoxView
				BackgroundColor               ="#16A9D1"
				HeightRequest                 ="50"
				RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}">
			</BoxView>
			<RelativeLayout
				BackgroundColor                ="Transparent"
				RelativeLayout.WidthConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
				RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"
				Margin                         ="12">
				<Frame
					HasShadow                      ="false"
					RelativeLayout.WidthConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
					RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"
					BackgroundColor                ="#FFFFFF"
					CornerRadius                   ="8">
				</Frame>
				<ScrollView
					Margin                         ="0"
					BackgroundColor                ="Transparent"
					RelativeLayout.WidthConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
					RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}">
					<Grid
						RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
						VerticalOptions               ="Start"
						BackgroundColor               ="Transparent"
						RowSpacing                    ="8">
						<Grid.RowDefinitions>
							<RowDefinition
								Height="60" />
							<RowDefinition
								Height="40" />
							<RowDefinition
								Height="*" />
							 
							<RowDefinition
								Height="120" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
						</Grid.ColumnDefinitions>
						<!-- Grid Row = 0 Title-->
						<Label
							Grid.Row             ="0"
							Grid.Column          ="0"
							Text                 ="Profile"
							Margin               ="20,0,0,0"
							HeightRequest        ="40"
							TextColor            ="Silver"
							FontSize             ="14"
 							VerticalOptions      ="Start"
							VerticalTextAlignment="Center">
						</Label>
						<!-- Grid Row = 1 Radio Button-->
						<Grid
							ColumnSpacing  ="2"
							Grid.Row       ="1"
							Grid.Column    ="0"
							x:Name         ="varGridRadioButton"
							BackgroundColor="Transparent"
							Margin         ="15,0,15,0">
							<Grid.RowDefinitions>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="120" />
								<ColumnDefinition
									Width="120" />
								<ColumnDefinition
									Width="120" />
							</Grid.ColumnDefinitions>
							<StackLayout
								BackgroundColor="Transparent"
								Grid.Row       ="0"
								Grid.Column    ="0"
								Orientation    ="Horizontal">
								<Grid
									RowSpacing     ="0"
									ColumnSpacing  ="8"
									BackgroundColor="Transparent">
									<Grid.RowDefinitions>
										<RowDefinition
											Height="*" />
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition
											Width="25" />
										<ColumnDefinition
											Width="*" />
									</Grid.ColumnDefinitions>
									<Button
										x:Name           ="varButtonR1"
										BackgroundColor  ="Transparent"
										HeightRequest    ="26"
										WidthRequest     ="26"
										HorizontalOptions="Start"
										VerticalOptions  ="Center"
										Grid.Row         ="0"
										Grid.Column      ="0"
										Clicked          ="Handle_Clicked_RadioButton"
										StyleId          ="R1"
										Image            ="radio">
									</Button>
									<Label
										Text                   ="Private"
										TextColor              ="#0C3851"
										BackgroundColor        ="Transparent"
										FontSize               ="16"
										HeightRequest          ="30"
										WidthRequest           ="60"
										HorizontalTextAlignment="Start"
										VerticalTextAlignment  ="Center"
										HorizontalOptions      ="Start"
										VerticalOptions        ="Center"
										Grid.Row               ="0"
										Grid.Column            ="1">
									</Label>
									<Button
										x:Name           ="varButtonT1"
										BackgroundColor  ="Transparent"
										HorizontalOptions="Fill"
										HeightRequest    ="30"
										VerticalOptions  ="Center"
										Grid.Row         ="0"
										Grid.Column      ="1"
										Clicked          ="Handle_Clicked_RadioButton"
										StyleId          ="R1">
									</Button>
								</Grid>
							</StackLayout>
							<StackLayout
								BackgroundColor="Transparent"
								Grid.Row       ="0"
								Grid.Column    ="1"
								Orientation    ="Horizontal">
								<Grid
									RowSpacing     ="0"
									ColumnSpacing  ="8"
									BackgroundColor="Transparent">
									<Grid.RowDefinitions>
										<RowDefinition
											Height="*" />
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition
											Width="25" />
										<ColumnDefinition
											Width="*" />
									</Grid.ColumnDefinitions>
									<Button
										x:Name           ="varButtonR2"
										BackgroundColor  ="Transparent"
										HeightRequest    ="26"
										WidthRequest     ="26"
										HorizontalOptions="Start"
										VerticalOptions  ="Center"
										Grid.Row         ="0"
										Grid.Column      ="0"
										Clicked          ="Handle_Clicked_RadioButton"
										StyleId          ="R2"
										Image            ="radio">
									</Button>
									<Label
										Text                   ="Friends"
										TextColor              ="#0C3851"
										BackgroundColor        ="Transparent"
										FontSize               ="16"
										HeightRequest          ="30"
										WidthRequest           ="60"
										HorizontalTextAlignment="Start"
										VerticalTextAlignment  ="Center"
										HorizontalOptions      ="Start"
										VerticalOptions        ="Center"
										Grid.Row               ="0"
										Grid.Column            ="1">
									</Label>
									<Button
										x:Name           ="varButtonT2"
										BackgroundColor  ="Transparent"
										HorizontalOptions="Fill"
										HeightRequest    ="30"
										VerticalOptions  ="Center"
										Grid.Row         ="0"
										Grid.Column      ="1"
										Clicked          ="Handle_Clicked_RadioButton"
										StyleId          ="R2">
									</Button>
								</Grid>
							</StackLayout>
							<StackLayout
								BackgroundColor="Transparent"
								Grid.Row       ="0"
								Grid.Column    ="2"
								Orientation    ="Horizontal">
								<Grid
									RowSpacing     ="0"
									ColumnSpacing  ="8"
									BackgroundColor="Transparent">
									<Grid.RowDefinitions>
										<RowDefinition
											Height="*" />
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition
											Width="25" />
										<ColumnDefinition
											Width="*" />
									</Grid.ColumnDefinitions>
									<Button
										x:Name           ="varButtonR3"
										BackgroundColor  ="Transparent"
										HeightRequest    ="26"
										WidthRequest     ="26"
										HorizontalOptions="Start"
										VerticalOptions  ="Center"
										Grid.Row         ="0"
										Grid.Column      ="0"
										Clicked          ="Handle_Clicked_RadioButton"
										StyleId          ="R3"
										Image            ="radio">
									</Button>
									<Label
										Text                   ="Public"
										TextColor              ="#0C3851"
										BackgroundColor        ="Transparent"
										FontSize               ="16"
										HeightRequest          ="30"
										WidthRequest           ="60"
										HorizontalTextAlignment="Start"
										VerticalTextAlignment  ="Center"
										HorizontalOptions      ="Start"
										VerticalOptions        ="Center"
										Grid.Row               ="0"
										Grid.Column            ="1">
									</Label>
									<Button
										x:Name           ="varButtonT3"
										BackgroundColor  ="Transparent"
										HorizontalOptions="Fill"
										HeightRequest    ="30"
										VerticalOptions  ="Center"
										Grid.Row         ="0"
										Grid.Column      ="1"
										Clicked          ="Handle_Clicked_RadioButton"
										StyleId          ="R3">
									</Button>
								</Grid>
							</StackLayout>
						</Grid>
						<!-- Grid Row = 2 Grid:Yes/No-->
						<Grid
							Grid.Row       ="2"
							Grid.Column    ="0"
							BackgroundColor="#EDEFF5"
							RowSpacing     ="0">
							<Grid.RowDefinitions>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
							</Grid.ColumnDefinitions>
							<Grid
								Grid.Row   ="0"
								Grid.Column="0"
								RowSpacing ="0"
								Margin     ="15">
								<Grid.RowDefinitions>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="90" />
								</Grid.ColumnDefinitions>
								<Label
									Grid.Row               ="0"
									Grid.Column            ="0"
									BackgroundColor        ="Transparent"
									Text                   ="Allow messaging with Coach"
									TextColor              ="#2A6C93"
									FontSize               ="16"
									HeightRequest          ="40"
									VerticalTextAlignment  ="Center"
									HorizontalTextAlignment="Start">
								</Label>
								<Local:csmSwitch
									Grid.Row         ="0"
									Grid.Column      ="1"
									HorizontalOptions="End">
								</Local:csmSwitch>
								<Label
									Grid.Row               ="1"
									Grid.Column            ="0"
									BackgroundColor        ="Transparent"
									Text                   ="Receive copy of message"
									TextColor              ="#7A91A3"
									FontSize               ="16"
									HeightRequest          ="40"
									VerticalTextAlignment  ="Center"
									HorizontalTextAlignment="Start">
								</Label>
								<Local:csmSwitch
									Grid.Row         ="1"
									Grid.Column      ="1"
									HorizontalOptions="End">
								</Local:csmSwitch>
							</Grid>
						</Grid>
						<!-- Grid Row = 3 Grid:Yes/No-->
						<Grid
							Grid.Row       ="3"
							Grid.Column    ="0"
							BackgroundColor="#EDEFF5"
							RowSpacing     ="0">
							<Grid.RowDefinitions>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
							</Grid.ColumnDefinitions>
							<Grid
								Grid.Row   ="0"
								Grid.Column="0"
								RowSpacing ="0"
								Margin     ="15">
								<Grid.RowDefinitions>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="90" />
								</Grid.ColumnDefinitions>
								<Label
									Grid.Row               ="0"
									Grid.Column            ="0"
									BackgroundColor        ="Transparent"
									Text                   ="Allow messaging with Friends"
									TextColor              ="#2A6C93"
									FontSize               ="16"
									HeightRequest          ="40"
									VerticalTextAlignment  ="Center"
									HorizontalTextAlignment="Start">
								</Label>
								<Local:csmSwitch
									Grid.Row         ="0"
									Grid.Column      ="1"
									HorizontalOptions="End">
								</Local:csmSwitch>
								<Label
									Grid.Row               ="1"
									Grid.Column            ="0"
									BackgroundColor        ="Transparent"
									Text                   ="Receive copy of message"
									TextColor              ="#7A91A3"
									FontSize               ="16"
									HeightRequest          ="40"
									VerticalTextAlignment  ="Center"
									HorizontalTextAlignment="Start">
								</Label>
								<Local:csmSwitch
									Grid.Row         ="1"
									Grid.Column      ="1"
									HorizontalOptions="End">
								</Local:csmSwitch>
							</Grid>
						</Grid>
						<!-- Grid Row = 4 Grid:Yes/No-->
						<Grid
							Grid.Row       ="4"
							Grid.Column    ="0"
							BackgroundColor="#EDEFF5"
							RowSpacing     ="0">
							<Grid.RowDefinitions>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
							</Grid.ColumnDefinitions>
							<Grid
								Grid.Row   ="0"
								Grid.Column="0"
								RowSpacing ="0"
								Margin     ="15">
								<Grid.RowDefinitions>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="90" />
								</Grid.ColumnDefinitions>
								<Label
									Grid.Row               ="0"
									Grid.Column            ="0"
									BackgroundColor        ="Transparent"
									Text                   ="Allow messaging with Public"
									TextColor              ="#2A6C93"
									FontSize               ="16"
									HeightRequest          ="40"
									VerticalTextAlignment  ="Center"
									HorizontalTextAlignment="Start">
								</Label>
								<Local:csmSwitch
									Grid.Row         ="0"
									Grid.Column      ="1"
									HorizontalOptions="End">
								</Local:csmSwitch>
								<Label
									Grid.Row               ="1"
									Grid.Column            ="0"
									BackgroundColor        ="Transparent"
									Text                   ="Receive copy of message"
									TextColor              ="#7A91A3"
									FontSize               ="16"
									HeightRequest          ="40"
									VerticalTextAlignment  ="Center"
									HorizontalTextAlignment="Start">
								</Label>
								<Local:csmSwitch
									Grid.Row         ="1"
									Grid.Column      ="1"
									HorizontalOptions="End">
								</Local:csmSwitch>
							</Grid>
						</Grid>
						<!-- Grid Row = 5 Grid:Yes/No  BackgroundColor="#A1B3C8",#80C8A6-->
						<Grid
							Grid.Row       ="5"
							Grid.Column    ="0"
							BackgroundColor="Transparent"
							RowSpacing     ="0"
							ColumnSpacing  ="0">
							<Grid.RowDefinitions>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
							</Grid.ColumnDefinitions>
							<Button
								Grid.Row         ="0"
								Grid.Column      ="0"
								Image            ="btn_cancel"
								BackgroundColor  ="Transparent"
								WidthRequest     ="60"
								HeightRequest    ="60"
								HorizontalOptions="End"
								VerticalOptions  ="Center">
							</Button>
							<Button
								Grid.Row         ="0"
								Grid.Column      ="1"
								BackgroundColor  ="Transparent"
								WidthRequest     ="60"
								HeightRequest    ="60"
								HorizontalOptions="Start"
								VerticalOptions  ="Center"
								Image            ="btn_save">
							</Button>
						</Grid>
					</Grid>
				</ScrollView>
			</RelativeLayout>
		</RelativeLayout>
	</ContentPage.Content>
</ContentPage>